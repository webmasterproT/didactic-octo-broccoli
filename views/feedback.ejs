<% include partials/header.ejs %>

<div class="feedback-container">
    <h1>Feedback</h1>
    <p>We value your insights and suggestions. Please let us know your thoughts about the content you've engaged with on our platform.</p>
    
    <form id="feedbackForm" action="/feedback" method="post">
        <div class="form-group">
            <label for="relatedTopic">Suggest a Related Topic:</label>
            <textarea id="relatedTopic" name="relatedTopic" rows="4" maxlength="1000" placeholder="Enter your suggestion here (up to 1000 characters)"></textarea>
        </div>
        
        <div class="form-group">
            <label for="email">Email Address (optional):</label>
            <input type="email" id="email" name="email" placeholder="Enter your email">
        </div>
        
        <div class="form-group">
            <label for="phoneNumber">Phone Number (optional):</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number">
        </div>
        
        <div class="form-group">
            <label for="personalInfo">Personal Information (optional):</label>
            <textarea id="personalInfo" name="personalInfo" rows="6" maxlength="10000" placeholder="Share about yourself (up to 10000 characters)"></textarea>
        </div>
        
        <div class="form-group">
            <label for="articleViewed">Article/Podcast/Video Viewed:</label>
            <input type="text" id="articleViewed" name="articleViewed" placeholder="Enter the title">
        </div>
        
        <div class="form-group">
            <button type="submit" class="submit-btn">Submit Feedback</button>
        </div>
    </form>
</div>

<% include partials/footer.ejs %>